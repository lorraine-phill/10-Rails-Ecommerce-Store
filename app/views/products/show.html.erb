<h3><%= @product.name %> </h3>
<div class="row">
	<div class='col-md-4'>
		<div>
			<%= image_tag @product.image.url(:medium), class: 'product_image'%>
		</div>
		<div>
			<strong>Description: </strong><%= @product.description %>
			<p><strong>Price: </strong><%= number_to_currency @product.price, unit: 'Â£' %></p>	
		</div>
	</div>

	<div class='col-md-8'>
		
		<div>
			<strong>Long Description:</strong> <%= @product.lg_desc %>
		</div>

		<div class="item_count">
			<div class="wrapup">
			<%= form_for current_cart do |f| %>
				<%= f.hidden_field :product_id, value: @product.id %>
				<%= f.submit 'Add to Cart' %>
			</div>	
		<% end %>
		

			<div class='item-count'>
				<%= "#{current_cart.count} items in cart" %>
				<!--  <%= pluralize current_cart.count,'' %> -->
			</div>


			<div>
				<%= link_to "Edit Cart", edit_cart_path(current_cart)%>
			</div>
			
			<div>
				<%= link_to "Checkout Cart", new_charge_path(current_cart)%>
			</div>

		</div>	

	</div>

</div>